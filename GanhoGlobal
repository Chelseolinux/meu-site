    <script>
        // FUN√á√ïES JAVASCRIPT
        function scrollToApps() {
            document.getElementById('apps').scrollIntoView({ behavior: 'smooth' });
        }
        
        // LINKS REAIS PARA PLATAFORMAS QUE FUNCIONAM EM ANGOLA
        function openTriaba() {
            window.open('https://www.triaba.ao', '_blank');
        }
        
        function openTGMPanel() {
            window.open('https://www.tgmpanel.co.ao', '_blank');
        }
        
        function openPawns() {
            window.open('https://pawns.app', '_blank');
        }
        
        function openSurveyJunkie() {
            window.open('https://www.surveyjunkie.com', '_blank');
        }
        
        function openFreecash() {
            window.open('https://freecash.com', '_blank');
        }
        
        function openOpinionBox() {
            window.open('https://www.opinionbox.co.ao', '_blank');
        }
        
        function openBonus() {
            window.open('https://pawns.app', '_blank');
        }
        
        // CALCULADORA DE GANHOS
        function calculateEarnings() {
            const hours = parseInt(document.getElementById('hoursDay').value) || 0;
            const days = parseInt(document.getElementById('daysWeek').value) || 0;
            
            if (hours > 0 && days > 0) {
                const weeklyEarnings = hours * days * 5; // ‚Ç¨5/hora m√©dia
                const monthlyEarnings = weeklyEarnings * 4;
                
                document.getElementById('earningsResult').innerHTML = 
                    `‚Ç¨${monthlyEarnings}/m√™s üí∞`;
            } else {
                alert('Por favor, preencha os dois campos!');
            }
        }
        
        // COUNTDOWN TIMER
        function startCountdown() {
            const countdownElement = document.getElementById('countdown');
            let time = 5 * 60 * 60; // 5 horas em segundos
            
            setInterval(() => {
                const hours = Math.floor(time / 3600);
                const minutes = Math.floor((time % 3600) / 60);
                const seconds = time % 60;
                
                countdownElement.textContent = 
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (time > 0) {
                    time--;
                }
            }, 1000);
        }
        
        // INICIAR
        document.addEventListener('DOMContentLoaded', () => {
            startCountdown();
        });
    </script>
